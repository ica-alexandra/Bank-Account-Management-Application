    ViewBag.Title = "ViewTransactions";
}

<h2>ViewTransactions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceIBAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestinationIBAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceIBAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationIBAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionDate)
